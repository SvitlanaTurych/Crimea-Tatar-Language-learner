<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="1102" prefWidth="669" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="qirim.app.controllers.LoginController">

    <ImageView fitHeight="1080" fitWidth="1920" pickOnBounds="true" preserveRatio="false">
        <Image url="@images/crimean-pattern-background.png"/>
    </ImageView>

        <Label fx:id="messageLabel" text="" StackPane.alignment="TOP_CENTER"
               style="-fx-text-fill: #FF4444; -fx-font-size: 14px; -fx-padding: 20;" />

        <VBox fx:id="registerForm" alignment="CENTER" spacing="15" visible="false" maxWidth="852" maxHeight="500"
              style="-fx-background-color: #043184; -fx-background-radius: 25; -fx-padding: 50 80 50 80;">

            <Label text="Ласкаво просимо до QIrIm"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #D4AF78;">
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>

            <TextField fx:id="registerUsernameField" promptText="Логін"
                       prefWidth="380" prefHeight="50"
                       style="-fx-background-color: transparent; -fx-border-color: #5A7FB8; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: white; -fx-prompt-text-fill: #8899BB; -fx-font-size: 16px; -fx-padding: 12;" />

            <PasswordField fx:id="registerPasswordField" promptText="Пароль"
                           prefWidth="380" prefHeight="50"
                           style="-fx-background-color: transparent; -fx-border-color: #5A7FB8; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: white; -fx-prompt-text-fill: #8899BB; -fx-font-size: 16px; -fx-padding: 12;" />

            <TextField fx:id="registerEmailField" promptText="Email"
                       prefWidth="380" prefHeight="50"
                       style="-fx-background-color: transparent; -fx-border-color: #5A7FB8; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: white; -fx-prompt-text-fill: #8899BB; -fx-font-size: 16px; -fx-padding: 12;">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </TextField>

            <Button text="Зареєструватись" onAction="#handleRegister"
                    prefWidth="180" prefHeight="50"
                    style="-fx-background-color: #D4AF78; -fx-text-fill: #043184; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8;">
                <VBox.margin>
                    <Insets top="10" bottom="15" />
                </VBox.margin>
            </Button>

            <Hyperlink text="Є акаунт? Увійти" onAction="#openLogin"
                       style="-fx-text-fill: #D4AF78; -fx-font-size: 14px; -fx-underline: false;" />
        </VBox>

        <VBox fx:id="loginForm" alignment="CENTER" spacing="15" visible="true" maxWidth="852" maxHeight="500"
              style="-fx-background-color: #043184; -fx-background-radius: 25; -fx-padding: 50 80 50 80;">

            <Label text="Ласкаво просимо до QIrIm"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #D4AF78;">
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>

            <TextField fx:id="loginUsernameField" promptText="Логін"
                       prefWidth="380" prefHeight="50"
                       style="-fx-background-color: transparent; -fx-border-color: #5A7FB8; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: white; -fx-prompt-text-fill: #8899BB; -fx-font-size: 16px; -fx-padding: 12;" />

            <PasswordField fx:id="loginPasswordField" promptText="Пароль"
                           prefWidth="380" prefHeight="50"
                           style="-fx-background-color: transparent; -fx-border-color: #5A7FB8; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: white; -fx-prompt-text-fill: #8899BB; -fx-font-size: 16px; -fx-padding: 12;">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </PasswordField>

            <Button text="Увійти" onAction="#handleLogin"
                    prefWidth="180" prefHeight="50"
                    style="-fx-background-color: #D4AF78; -fx-text-fill: #043184; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8;">
                <VBox.margin>
                    <Insets top="10" bottom="15" />
                </VBox.margin>
            </Button>

            <Hyperlink text="Немає акаунту? Зареєструватись" onAction="#openRegister"
                       style="-fx-text-fill: #D4AF78; -fx-font-size: 14px; -fx-underline: false;" />
        </VBox>

</StackPane>